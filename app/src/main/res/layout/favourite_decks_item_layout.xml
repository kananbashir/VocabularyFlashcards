<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="false"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/shapeTopSide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/deck_top_part_2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutCoverFavouriteDecksItem"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/davys_gray"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/shapeRightSide"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shapeTopSide">

            <TextView
                android:id="@+id/tvDeckTitleFavouriteDecksItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/comfortaa_bold"
                android:includeFontPadding="false"
                android:maxHeight="35dp"
                android:text="@string/text_deck_title"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvRandFlashcard1FavouriteDecksItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="@string/placeholder_random_flashcard_my_deck_1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="8sp"
                app:layout_constraintBottom_toTopOf="@+id/tvRandFlashcard2FavouriteDecksItem"
                app:layout_constraintStart_toStartOf="@+id/tvRandFlashcard2FavouriteDecksItem"
                app:layout_constraintTop_toBottomOf="@+id/tvDeckTitleFavouriteDecksItem"
                app:layout_constraintVertical_bias="0.3"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tvRandFlashcard2FavouriteDecksItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="@string/placeholder_random_flashcard_my_deck_2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="8sp"
                app:layout_constraintBottom_toTopOf="@+id/tvRandFlashcard3FavouriteDecksItem"
                app:layout_constraintStart_toStartOf="@+id/tvRandFlashcard3FavouriteDecksItem"
                app:layout_constraintTop_toBottomOf="@+id/tvRandFlashcard1FavouriteDecksItem" />

            <TextView
                android:id="@+id/tvRandFlashcard3FavouriteDecksItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="@string/placeholder_random_flashcard_my_deck_3"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="8sp"
                app:layout_constraintBottom_toTopOf="@+id/tvRandFlashcard4FavouriteDecksItem"
                app:layout_constraintStart_toStartOf="@+id/tvRandFlashcard4FavouriteDecksItem"
                app:layout_constraintTop_toBottomOf="@+id/tvRandFlashcard2FavouriteDecksItem" />

            <TextView
                android:id="@+id/tvRandFlashcard4FavouriteDecksItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="@string/placeholder_random_flashcard_my_deck_4"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="8sp"
                app:layout_constraintBottom_toTopOf="@+id/tvRandFlashcard5FavouriteDecksItem"
                app:layout_constraintStart_toStartOf="@+id/tvRandFlashcard5FavouriteDecksItem"
                app:layout_constraintTop_toBottomOf="@+id/tvRandFlashcard3FavouriteDecksItem" />

            <TextView
                android:id="@+id/tvRandFlashcard5FavouriteDecksItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="@string/placeholder_random_flashcard_my_deck_5"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="8sp"
                app:layout_constraintBottom_toTopOf="@+id/tvRandFlashcard6FavouriteDecksItem"
                app:layout_constraintStart_toStartOf="@+id/tvRandFlashcard6FavouriteDecksItem"
                app:layout_constraintTop_toBottomOf="@+id/tvRandFlashcard4FavouriteDecksItem" />

            <TextView
                android:id="@+id/tvRandFlashcard6FavouriteDecksItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="@string/placeholder_random_flashcard_my_deck_6"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRandFlashcard5FavouriteDecksItem" />

            <TextView
                android:id="@+id/tvRandFlashcardDotsFavouriteDecksItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="@string/placeholder_random_flashcard_dots_my_deck"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="5sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRandFlashcard6FavouriteDecksItem"
                app:layout_constraintVertical_bias="0.19" />

            <TextView
                android:id="@+id/tvTotalCardsFavouriteDecksItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="@string/placeholder_random_flashcard_total_cards_my_deck"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="5sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ivNonFavoriteIconFavouriteDecksItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="8dp"
                android:elevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_favorite_3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/shapeRightSide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/deck_right_side_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivGoEditFavouriteDecksItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/ic_go_edit_gray_favs" />

        <ImageView
            android:id="@+id/ivGoDeleteFavouriteDecksItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/ic_go_delete_gray_favs" />

        <ImageView
            android:id="@+id/ivGoDetailsFavouriteDecksItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_go_details_gray_favs" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>