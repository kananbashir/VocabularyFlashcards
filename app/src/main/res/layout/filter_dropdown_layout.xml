<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/rgFilterDropdownItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbFilterNewestDropdownItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="true"
                android:fontFamily="@font/comfortaa_bold"
                android:includeFontPadding="false"
                android:minHeight="0dp"
                android:paddingStart="20dp"
                android:paddingTop="15dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:text="@string/text_filter_newest_first"
                android:textAlignment="center"
                android:textColor="@color/davys_gray"
                android:textSize="12sp"
                tools:ignore="SmallSp,TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/rbFilterOldestDropdownItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:fontFamily="@font/comfortaa_bold"
                android:includeFontPadding="false"
                android:minHeight="0dp"
                android:paddingStart="20dp"
                android:paddingTop="15dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:text="@string/text_filter_oldest_first"
                android:textAlignment="center"
                android:textColor="@color/davys_gray"
                android:textSize="12sp"
                tools:ignore="SmallSp,TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/rbFilterFavouritesDropdownItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:fontFamily="@font/comfortaa_bold"
                android:includeFontPadding="false"
                android:minHeight="0dp"
                android:paddingStart="20dp"
                android:paddingTop="15dp"
                android:paddingEnd="20dp"
                android:paddingBottom="15dp"
                android:text="@string/text_filter_favourites_first"
                android:textAlignment="center"
                android:textColor="@color/davys_gray"
                android:textSize="12sp"
                tools:ignore="SmallSp,TouchTargetSizeCheck" />
        </RadioGroup>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>