<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:id="@+id/lyNumberQuizDetailsItem"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="3dp"
        android:layout_weight="0.56"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:background="@color/anti_flash_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNumberQuizDetailsItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_bold"
            android:includeFontPadding="false"
            android:text="@string/text_number_first"
            android:textAlignment="center"
            android:textColor="@color/davys_gray"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyFlashcardQuizDetailsItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_weight="1.5"
        android:background="@color/anti_flash_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="13dp">

        <TextView
            android:id="@+id/tvFlashcardQuizDetailsItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_bold"
            android:includeFontPadding="false"
            android:text="@string/text_flashcard"
            android:textAlignment="center"
            android:textColor="@color/davys_gray"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyAnswerQuizDetailsItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_weight="1.5"
        android:background="@color/anti_flash_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="13dp">

        <TextView
            android:id="@+id/tvAnswerQuizDetailsItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_bold"
            android:includeFontPadding="false"
            android:text="@string/placeholder_quiz_result_answer"
            android:textAlignment="center"
            android:textColor="@color/davys_gray"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyResultQuizDetailsItem"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="@color/anti_flash_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvResultQuizDetailsItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_bold"
            android:includeFontPadding="false"
            android:text="@string/placeholder_quiz_result_correct"
            android:textAlignment="center"
            android:textColor="@color/davys_gray"
            android:textSize="9sp" />
    </LinearLayout>

</LinearLayout>